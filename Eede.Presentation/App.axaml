<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Eede.Presentation"
             xmlns:converters="using:Eede.Presentation.Common.Converters"
             x:Class="Eede.Presentation.App"
             RequestedThemeVariant="Default">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Styles/Colors/DefaultTheme.axaml"/>
      </ResourceDictionary.MergedDictionaries>
      <converters:PlayPauseTextConverter x:Key="PlayPauseTextConverter" />
    </ResourceDictionary>
  </Application.Resources>
  <Application.Styles>
    <FluentTheme/>

    <StyleInclude Source="avares://Dock.Avalonia/Themes/DockFluentTheme.axaml" />
    <StyleInclude Source="/Styles/Styles.axaml"/>
  </Application.Styles>
</Application>
