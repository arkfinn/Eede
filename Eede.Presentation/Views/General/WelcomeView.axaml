<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Eede.Presentation.ViewModels.General"
             xmlns:sk="clr-namespace:Eede.Domain.SharedKernel;assembly=Eede.Domain"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
             x:Class="Eede.Presentation.Views.General.WelcomeView"
             x:DataType="vm:WelcomeViewModel">
  <Design.DataContext>
    <!-- プレビュー用のダミーデータ -->
  </Design.DataContext>

  <ScrollViewer>
    <StackPanel Margin="24" Spacing="30">
      <!-- ロゴ・ヘッダーエリア -->
      <StackPanel Spacing="12">
        <Border Background="{DynamicResource SystemAccentColorLight}"
                CornerRadius="16"
                Padding="8"
                HorizontalAlignment="Center"
                BoxShadow="0 4 12 0 #40000000">
          <Image Source="/Assets/logo.png" Width="96" Height="96"/>
        </Border>

        <StackPanel HorizontalAlignment="Center" Spacing="4">
          <TextBlock Text="Excellent Expert Dot Editor"
                     FontSize="12"
                     Foreground="Gray"
                     FontWeight="Light"
                     HorizontalAlignment="Center"/>
        </StackPanel>
      </StackPanel>

      <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
        <!-- 左カラム: 開始, 最近使ったもの -->
        <StackPanel Grid.Column="0" Spacing="30" Margin="0 0 20 0">
          <!-- 開始 -->
          <StackPanel Spacing="10">
            <TextBlock Text="開始" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource SystemAccentColor}"/>
            <Button Command="{Binding CreateNewPictureCommand}" Classes="Link">
              <StackPanel Orientation="Horizontal" Spacing="10">
                <PathIcon Data="{StaticResource NoteAddIconGeometry}"/>
                <TextBlock Text="新しい画像を作成"/>
              </StackPanel>
            </Button>
            <Button Command="{Binding OpenPictureCommand}" Classes="Link">
              <StackPanel Orientation="Horizontal" Spacing="10">
                <PathIcon Data="{StaticResource FolderOpenIconGeometry}"/>
                <TextBlock Text="画像を開く"/>
              </StackPanel>
            </Button>
          </StackPanel>

          <!-- 最近使ったファイル -->
          <StackPanel Spacing="10">
            <TextBlock Text="最近使ったもの" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource SystemAccentColor}"/>
            <ItemsControl ItemsSource="{Binding RecentFiles}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Button Command="{Binding ((vm:WelcomeViewModel)DataContext).OpenRecentFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          CommandParameter="{Binding Path}"
                          Classes="Link">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                      <PathIcon Data="{StaticResource EditIconGeometry}"/>
                      <StackPanel>
                        <TextBlock Text="{Binding Path}" TextWrapping="Wrap" MaxWidth="240"/>
                        <TextBlock Text="{Binding LastAccessed}" FontSize="10" Foreground="Gray"/>
                      </StackPanel>
                    </StackPanel>
                  </Button>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </StackPanel>

        <!-- 右カラム: アップデート, リンク -->
        <StackPanel Grid.Column="1" Spacing="30" Margin="20 0 0 0">
          <!-- アップデートセクション -->
          <StackPanel Spacing="10">
            <TextBlock Text="アップデート" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource SystemAccentColor}"/>
            <Border Padding="12" CornerRadius="8" Background="#10FFFFFF"
                    IsVisible="{Binding IsUpdateAvailable}">
              <StackPanel Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                  <!-- チェック中・ダウンロード中のリング（インジケーター） -->
                  <ProgressBar IsIndeterminate="True" Width="16" Height="16" Theme="{StaticResource FluentProgressBarRingTheme}"
                               IsVisible="{Binding IsUpdateChecking}"/>
                  <ProgressBar IsIndeterminate="True" Width="16" Height="16" Theme="{StaticResource FluentProgressBarRingTheme}"
                               IsVisible="{Binding IsUpdateDownloading}"/>

                  <TextBlock FontSize="12" Foreground="Gray" Text="{Binding UpdateMessage}"/>
                </StackPanel>

                <Button Command="{Binding ApplyUpdateCommand}"
                        IsVisible="{Binding IsUpdateReady}"
                        HorizontalAlignment="Stretch"
                        Classes="Accent">
                  <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                    <PathIcon Data="{StaticResource SyncIconGeometry}"/>
                    <TextBlock Text="再起動してアップデートを適用" VerticalAlignment="Center"/>
                  </StackPanel>
                </Button>
              </StackPanel>
            </Border>
            <TextBlock Text="最新の状態です" FontSize="12" Foreground="Gray" IsVisible="{Binding !IsUpdateAvailable}"/>
          </StackPanel>

          <!-- リンク -->
          <StackPanel Spacing="10">
            <TextBlock Text="リンク" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource SystemAccentColor}"/>
            <Button Command="{Binding OpenUrlCommand}" CommandParameter="https://github.com/arkfinn/Eede" Classes="Link">
              <StackPanel Orientation="Horizontal" Spacing="10">
                <PathIcon Data="{StaticResource FillSquareIconGeometry}"/>
                <TextBlock Text="GitHub リポジトリ"/>
              </StackPanel>
            </Button>
            <Button Command="{Binding OpenUrlCommand}" CommandParameter="https://github.com/arkfinn/Eede/discussions" Classes="Link">
              <StackPanel Orientation="Horizontal" Spacing="10">
                <PathIcon Data="{StaticResource FillSquareIconGeometry}"/>
                <TextBlock Text="GitHub 議論板 (Discussions)"/>
              </StackPanel>
            </Button>
          </StackPanel>
        </StackPanel>
      </Grid>
    </StackPanel>
  </ScrollViewer>

  <UserControl.Styles>
    <!-- リンクボタンの基本スタイル -->
    <Style Selector="Button.Link">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="12 8"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="HorizontalContentAlignment" Value="Left"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Transitions">
        <Transitions>
          <BrushTransition Property="Background" Duration="0:0:0.1"/>
        </Transitions>
      </Setter>
    </Style>

    <Style Selector="Button.Link PathIcon">
      <Setter Property="Opacity" Value="0.6"/>
      <Setter Property="Transitions">
        <Transitions>
          <DoubleTransition Property="Opacity" Duration="0:0:0.1"/>
          <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
        </Transitions>
      </Setter>
    </Style>

    <!-- ホバー時の演出 -->
    <Style Selector="Button.Link:pointerover /template/ ContentPresenter">
      <Setter Property="Background" Value="#15FFFFFF"/> <!-- 控えめな白の透過（ダークテーマ向け） -->
    </Style>

    <Style Selector="Button.Link:pointerover PathIcon">
      <Setter Property="Opacity" Value="1.0"/>
      <Setter Property="RenderTransform" Value="translateX(2px)"/>
    </Style>

    <!-- クリック（アクティブ）時の演出 -->
    <Style Selector="Button.Link:pressed">
      <Setter Property="Opacity" Value="0.7"/>
      <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <!-- 最近使ったファイルのリストアイテム固有の調整 -->
    <Style Selector="ItemsControl > ContentPresenter">
      <Setter Property="Margin" Value="0 2"/>
    </Style>
  </UserControl.Styles>
</UserControl>
