<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Eede.Presentation.ViewModels.Pages"
        xmlns:pages="clr-namespace:Eede.Presentation.Views.Pages"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Eede.Presentation.Views.Pages.MainWindow"
        Icon="/Assets/logo.png"
        Title="Eede"
        ExtendClientAreaToDecorationsHint="False"
        x:DataType="vm:MainViewModel">
  <Window.KeyBindings>
    <KeyBinding Gesture="Ctrl+C" Command="{Binding CopyCommand}" />
    <KeyBinding Gesture="Ctrl+X" Command="{Binding CutCommand}" />
    <KeyBinding Gesture="Ctrl+V" Command="{Binding PasteCommand}" />
  </Window.KeyBindings>
  <pages:MainView />
</Window>
