<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Eede.Views.General.Buttons"
             xmlns:c="clr-namespace:Eede.Common.Converters"
             mc:Ignorable="d" d:DesignWidth="22" d:DesignHeight="22"
             x:Class="Eede.Views.General.Buttons.ToolButton">
  <Button Width="22" 
          Height="22"
          Padding="0"
          Background="#00000000" 
          BorderBrush="#00000000" 
          Command="{Binding Command, RelativeSource={RelativeSource AncestorType={x:Type local:ToolButton}}}"
          CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType={x:Type local:ToolButton}}}">
    <Button.Resources>
      <c:BitmapConverter x:Key="bitmapConverter" />
    </Button.Resources>
    <Image Source="{Binding Source, RelativeSource={RelativeSource AncestorType={x:Type local:ToolButton}}, Converter={StaticResource bitmapConverter}}"
           Stretch="None"/>
  </Button>

</UserControl>
